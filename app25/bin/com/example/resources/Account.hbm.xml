<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.example.entity.Account" table="account">
		<id name="accNo"/>
		<discriminator column="TYPE" type="string"/>
		<property name= "accName"/>
		<property name="accType"/>
		
		<subclass name="com.example.entity.StudentAccount" discriminator-value="std">
			<property name="sid"/>
			<property name="sbranch"/>
			<property name="smarks"/>
		</subclass>
		<subclass name="com.example.entity.EmployeeAccount" discriminator-value="emp">
			<property name="eid"/>
			<property name="esal"/> 
			<property name="eaddr"/>
		</subclass>
	</class>
</hibernate-mapping>